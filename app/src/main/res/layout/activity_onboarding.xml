<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="22dp"
            android:layout_gravity="end"
            android:id="@+id/ChooseLanguage"
            >

        </Spinner>
        <!--        <ImageView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:padding="25dp"-->
        <!--            android:layout_gravity="end"-->
        <!--            android:src="@drawable/vnlanguage">-->
        <!--        </ImageView>-->
    </LinearLayout>

    <ImageView
        android:id="@+id/img_Main_Lg"
        android:layout_width="331dp"
        android:layout_height="181dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:src="@drawable/mainlg"></ImageView>

    <TextView
        android:id="@+id/txt_App_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_Main_Lg"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinssemibold"
        android:text="AirVisual"
        android:textColor="@color/white"
        android:textSize="34dp">
    </TextView>

    <TextView
        android:id="@+id/txt_Slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_App_name"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsregular"
        android:gravity="center"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="15dp"></TextView>

    <Button
        android:id="@+id/btn_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_Slogan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:width="380dp"
        android:height="45dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/btn_Login"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold">

    </Button>

    <Button
        android:id="@+id/btn_Create_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_Login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:width="380dp"
        android:height="45dp"
        android:background="@drawable/buton_shape_black_border"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/btn_Create_acc"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold">

    </Button>

</RelativeLayout>