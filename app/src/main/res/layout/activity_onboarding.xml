<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="25dp"
                android:padding="10dp"
                android:id="@+id/ChooseLanguage">
            </Spinner>
        </RelativeLayout>

    <ImageView
        android:id="@+id/img_Main_Lg"
        android:layout_width="331dp"
        android:layout_height="181dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:src="@drawable/mainlg"></ImageView>

    <TextView
        android:id="@+id/txt_Slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_Main_Lg"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsregular"
        android:gravity="center"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="15dp"></TextView>

    <Button
        android:id="@+id/btn_onboardingLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_Slogan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="202dp"
        android:width="300dp"
        android:height="45dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/btn_Login"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold">

    </Button>

    <Button
        android:id="@+id/btn_onboardingCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_onboardingLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:width="300dp"
        android:height="45dp"
        android:background="@drawable/buton_shape_black_border"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/btn_onboardingCreateAccount"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold">

    </Button>

</RelativeLayout>